{
    "name": "qini-api",
    "version": "1.0.0",
    "main": "index.ts",
    "author": "Nguyen Hoang Tuan",
    "license": "MIT",
    "include": [
        "./api/*.ts"
    ],
    "scripts": {
        "dev": "nodemon api/index.ts",
        "build": "prisma generate && prisma db push && tsc",
        "prisma-init": "prisma init",
        "prisma-pull": "prisma db pull",
        "prisma-push": "prisma db push",
        "prisma-history": "prisma migrate dev",
        "prisma-migrate": "mkdir -p prisma/migrations/0_init && prisma migrate diff --from-empty --to-schema-datamodel prisma/schema.prisma --script > prisma/migrations/0_init/migration.sql",
        "prisma-generate": "prisma generate",
        "prisma-update": "yarn prisma-pull && yarn prisma-migrate && yarn prisma-generate",
        "prettier": "prettier --write \"**/*.{ts,tsx,json,scss}\"",
        "eslint": "tsc --noEmit && eslint --quiet \"src/**/*.{ts,tsx,json}\"",
        "lint-staged": "lint-staged",
        "serve": "node dist/index.js",
        "prepare": "husky install",
        "postinstall": "prisma generate"
    },
    "lint-staged": {
        "src/**/*.{ts,tsx,json}": [
            "yarn prettier",
            "yarn eslint",
            "git add ."
        ]
    },
    "dependencies": {
        "@prisma/client": "^5.7.0",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.4",
        "@types/uuid": "^9.0.7",
        "@typescript-eslint/eslint-plugin": "^6.13.2",
        "@typescript-eslint/parser": "^6.13.2",
        "eslint": "^8.55.0",
        "eslint-plugin-json": "^3.1.0",
        "husky": "^8.0.3",
        "lint-staged": "^15.2.0",
        "nodemon": "^3.0.2",
        "prettier": "3.1.0",
        "prisma": "^5.7.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    }
}
